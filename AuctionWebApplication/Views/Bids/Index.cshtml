@model IEnumerable<AuctionWebApplication.Bid>

@{
    ViewData["Title"] = "Index";
}

<h1>Ставки</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuctionId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BidTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bidder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuctionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BidTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bidder.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BidId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BidId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BidId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
